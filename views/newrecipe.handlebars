<!-- sign up part -->
<div class="signup">
    <div class="my-4 d-flex justify-content-lg-start">
        <h1 class="grey justify-content-sm-center">Add New Recipe</h1>
    </div>
    <form>
        <!-- filters -->
        <div class="d-flex row">
            <div id="cuisine" class="col-sm-12 col-lg-4">
                <select class="form-control fontheavy highlight">
                    <option class="dropdown-item" value="">Cuisine</option>
                    <option class="dropdown-item" value="HongKongese">Hongkongese</option>
                    <option class="dropdown-item" value="Japanese">Japanese</option>
                    <option class="dropdown-item" value="Chinese">Chinese</option>
                    <option class="dropdown-item" value="Korean">Korean</option>
                    <option class="dropdown-item" value="Thai">Thai</option>
                    <option class="dropdown-item" value="Others">Others</option>
                </select>
            </div>

            <div id="foodtype" class="col-sm-12 col-lg-4">
                <select class="form-control fontheavy highlight">
                    <option class="dropdown-item" value="">Food type</option>
                    <option class="dropdown-item" value="BBQ">BBQ</option>
                    <option class="dropdown-item" value="Dessert">Dessert</option>
                    <option class="dropdown-item" value="Fried">Fried</option>
                    <option class="dropdown-item" value="Steamed" >Steamed</option>
                    <option class="dropdown-item" value="Others" >Others</option>
                </select>
            </div>


            <div id="foodnamesection" class="col-sm-12 col-lg-4">
                <select class="form-control fontheavy highlight">
                    <option class="dropdown-item" href="#">Food name</option>
                </select>
            </div>

        </div><br>

        <div class="form-group row">
            <label for="recipename" class="col-sm-2 col-form-label">Recipe Name</label>
            <div class="col-sm-12">
                <input type="text" class="form-control nullcheck" id="recipename">
            </div>
        </div>
        <div class="form-group row">
            <label for="cookingtime" class="col-sm-2 col-form-label">Cooking Time</label>
            <div class="col-sm-12">
                <input type="text" class="form-control nullcheck" id="cookingtime" placeholder="ex) 10minutes">
            </div>
        </div>
        <div class="form-group row">
            <label for="text" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-12">
                <input type="text" class="form-control nullcheck" id="recipedescription"
                    placeholder="Please describe your recipe in short">
            </div>
        </div>
        <fieldset class="form-group flex-wrap">
            <label for="form-check-input" class="mr-4">Difficulty</label>
            <div class="col-sm-12">
                <label class="radio-inline mx-2">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="1"
                        checked>★☆☆☆☆
                </label>
                <label class="radio-inline mx-4">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="2">★★☆☆☆
                </label>
                <label class="radio-inline mx-4">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="3">★★★☆☆
                </label>
                <label class="radio-inline mx-4">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="4">★★★★☆
                </label>
                <label class="radio-inline mx-4">
                    <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="5">★★★★★
                </label>
            </div>
        </fieldset>
        <div class="form-group mx-1">
            <label for="exampleFormControlTextarea1">HOW TO</label>
            <textarea class="form-control nullcheck" id="recipehowto" rows="10" placeholder="Please describe how you made the food (please press enter when each step ends)
                
                "></textarea>
        </div>
        <br>
        <div class="custom-file mb-3">
            <div>
                <label for="file">Choose 1 picture of your recipe (This picture will be added to your recipe)</label><br>
                <input type="file" class="btn btn-outline-secondary col-12" id="file" name="file" multiple>
            </div><br>

            <div class="form-group row d-flex justify-content-center">
                <div>
                    <button id="fire" type="submit" class="btn btn-danger">UPLOAD</button>
                </div>
            </div>
    </form>
</div>