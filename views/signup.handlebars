<!-- sign up part -->
<div class="signup">
    <br>
    <h1 class="grey">Sign up</h1><br>
    <form>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="username" class="form-control" id="usernameInput" placeholder="Email can be max 25 characters">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="pwInput" placeholder="Password must contain more than 8 characters">
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Confirm Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="pwConfirm" placeholder="Please confirm the password">
            </div>
        </div>

        <div class="form-group row">
            <label for="security" class="col-sm-2 col-form-label">Security Question</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="securityQ" placeholder="This question will be asked when you forget your password">
            </div>
        </div>

        <div class="form-group row">
            <label for="security" class="col-sm-2 col-form-label">Your Answer</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="securityA">
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-2">Recieve email</div>
            <div class="col-sm-10">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Yes, I want to receive email
                    </label>
                </div>
            </div>
        </div>
        <br><br>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-outline-dark">Sign up</button>
            </div>
        </div>
    </form>
</div>