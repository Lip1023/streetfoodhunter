<!-- sign up part -->
<div class="signup">
    <br>
    <h1 class="grey">Sign up</h1><br>
    <form action="/signup" method="post">
        <div class="form-group row">
            <label for="usernameInput" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-12">
                <input type="text" name="username" class="form-control" id="usernameInput" placeholder="Email can be max 25 characters">
            </div>
        </div>
        <div class="form-group row">
            <label for="pwInput" class="col-sm-2 col-form-label">Password</label>
            <div class="col-sm-12">
                <input type="password" name="password" class="form-control" id="pwInput" placeholder="Password must contain more than 8 characters">
            </div>
        </div>
        <div class="form-group row">
            <label for="pwConfirm" class="col-sm-2 col-form-label">Confirm Password</label>
            <div class="col-sm-12">
                <input type="password" class="form-control" id="pwConfirm" placeholder="Please confirm the password">
            </div>
        </div>

        <div class="form-group row">
            <label for="security" class="col-sm-12 col-form-label">What is your first teacher's name in primary school?</label>
            <div class="col-sm-12">
                <input type="text" name="sa" class="form-control" id="securityA" placeholder="This will be asked when you forget your password">
            </div>
        </div>



        <div class="form-group row">
            <div class="col-sm-2">Do you want to recieve our email?</div>
            <div class="col-sm-12">
                <div class="form-check">
                    <br><input class="form-check-input" type="checkbox" id="gridCheck1">
                    <label class="form-check-label" for="gridCheck1">
                        Yes, I want to receive email
                    </label>
                </div>
            </div>
        </div>
        <br><br>
        
           <div class="form-group row d-flex justify-content-center">
                <div>
                    <button id="signup_submit" type="submit" class="btn btn-lg btn-dark">Sign up</button>
                </div>
            </div>
    </form>
</div>