<div class="book roundborder cotainer-fluid row" id="mypagebox">
    <h1 class="p-4 grey">Hi {{user_name}}!</h1>


    <h3 class="pb-4 fontheavy">My recipes</h3>


    {{#each recipe}}
    <div class="cotainer-fluid mypagerecipe roundborder row col-12">

        {{!-- image side --}}
        <div class="col-sm-12 col-md-6">

            <img class="mypageimg" src={{recipe_image_url}} alt="food">
        </div>

        {{!-- info side --}}
        <div class="container-fluid col-sm-12 col-md-6">

                <h3 class="mt-5">
                    <a class="black nodeco" href='/recipe:{{recipe_id}}'>{{recipe_name}}
                    </a>
                </h3>
        
            
            <h4>
                <div class="rating" id="minheart">
                    <div class="rating-upper red" style="width:   {{recipe_rating}}%">
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                    </div>
                    <div class="rating-lower">
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                    </div>
                </div>
            </h4>

            <h4>
                <div class="rating" id="minstar">
                    <div class="rating-upper yellow" style="width:       {{recipe_difficulty}}%">
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                    </div>
                    <div class="rating-lower">
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                    </div>
                </div>
            </h4>

        </div>
    </div>

    {{else}}
    <div class="col-sm-12">
        <p>You haven't uploaded any recipes</p>
    </div>
    {{/each}}





    <h3 class="pb-4 fontheavy">Favourites</h3>

    {{#each favourite}}
    <div class="cotainer-fluid mypagerecipe roundborder row col-12">

        {{!-- image side --}}
        <div class="col-sm-12 col-md-6">

            <img class="mypageimg" src={{recipe_image_url}} alt="food">
        </div>

        {{!-- info side --}}
        <div class="container-fluid col-sm-12 col-md-6">
            <div class="d-flex justify-content-center mt-5">
                <h3>
                    <a class="black nodeco" href='/recipe:{{recipe_id}}'>{{recipe_name}}
                    </a>
                </h3>
                <br><img class="deletefav icon2 ml-2" src="delete.png" alt="{{recipe_id}}">
            </div>
            <h5>{{users_user_id}}</h5>

            <h4>
                <div class="rating" id="minheart">
                    <div class="rating-upper red" style="width:   {{recipe_rating}}%">
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                    </div>
                    <div class="rating-lower">
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                        <span>❤</span>
                    </div>
                </div>
            </h4>

            <h4>
                <div class="rating" id="minstar">
                    <div class="rating-upper yellow" style="width:       {{recipe_difficulty}}%">
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                    </div>
                    <div class="rating-lower">
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                        <span>★</span>
                    </div>
                </div>
            </h4>

        </div>
    </div>

    {{else}}
    <div class="col-sm-12">
        <p>You haven't got any favourite recipes</p>
    </div>
    {{/each}}


</div>